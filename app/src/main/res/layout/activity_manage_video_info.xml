<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m1.pages.manageSubPage.manageVideoInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TableRow android:layout_margin="10dp">

                <ImageView
                    android:layout_height="30dp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:layout_gravity="center"
                    android:text="视频查找结果:" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <ImageView />

                <TextView android:text="视频Vid:" />

                <TextView
                    android:id="@+id/Vid"
                    android:text="Vid" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <ImageView />

                <TextView android:text="视频名:" />

                <TextView
                    android:id="@+id/videoname"
                    android:text="vdieoName" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <ImageView />

                <TextView android:text="上传用户UId:" />

                <TextView
                    android:id="@+id/uploadUid"
                    android:text="UId" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <ImageView />

                <TextView android:text="上传用户用户名:" />

                <TextView
                    android:id="@+id/uploadName"
                    android:text="UId" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/image_manageUserUploadCover"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY"
                    android:src="@drawable/_0210722" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_manageUserUploadVideoName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="" />

                        <Button
                            android:id="@+id/deleteBtn"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="#FF4A3D"
                            android:text="删除视频" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/text_manageUserUploadVideoDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
